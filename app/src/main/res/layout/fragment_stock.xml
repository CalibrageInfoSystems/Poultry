                android:orientation="vertical"
                android:background="@color/whitepure"
                android:weightSum="1">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/_3dp"
                    android:layout_weight="1"
                    android:background="@color/whitepure"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="1"
                        android:background="@color/blue">

                        <TextView
                            android:id="@+id/date"
                            style="@style/Common_textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:layout_marginLeft="30dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Date"
                            android:textAlignment="textStart"
                            android:textColor="@color/whitepure"
                            android:textSize="@dimen/margin_12" />

                        <TextView
                            android:id="@+id/billrate"
                            style="@style/Common_textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/billrate"
                            android:textAlignment="textStart"
                            android:textColor="@color/whitepure"
                            android:textSize="@dimen/margin_12" />

                        <TextView
                            android:id="@+id/morality"
                            style="@style/Common_textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/totallproduction"
                            android:textAlignment="textStart"
                            android:textColor="@color/whitepure"
                            android:textSize="@dimen/margin_12" />

                        <TextView
                            android:id="@+id/ehhs"
                            style="@style/Common_textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/packaging"
                            android:textAlignment="textStart"
                            android:textColor="@color/whitepure"
                            android:textSize="@dimen/_16dp" />

                        <TextView
                            android:id="@+id/closingstock"
                            style="@style/Common_textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/closing"
                            android:textAlignment="textStart"
                            android:textColor="@color/whitepure"
                            android:textSize="@dimen/_16dp" />


                    </LinearLayout>

<!--             jjf       -->

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/margin_20"
                        android:background="@color/whitepure"/>


                </LinearLayout>


                <!--                    </android.support.v7.widget.CardView>-->

            </LinearLayout>
        </LinearLayout>
        </LinearLayout>



    </ScrollView>
