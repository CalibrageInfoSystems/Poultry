<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:id="@+id/linear_layout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/blue"
            android:id="@+id/tv_item_title"
            android:fontFamily="@font/poppins_semibold"
            android:text="Layers" />




    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/whitepure"
        android:orientation="vertical"
        android:weightSum="1">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/blue"
            android:weightSum="1">
            <TextView
                style="@style/Common_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/purchasedate"
                android:layout_marginLeft="25dp"
                android:layout_weight="0.2"
                android:text="Date"
                android:textSize="@dimen/margin_12"
                android:fontFamily="@font/poppins_semibold"
                android:textAlignment="textStart"
                android:textColor="@color/whitepure" />
            <TextView
                android:id="@+id/purchaseName"
                style="@style/Common_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/margin_12"
                android:fontFamily="@font/poppins_semibold"
                android:layout_weight="0.28"
                android:text="Name"
                android:textAlignment="textStart"
                android:textColor="@color/whitepure" />
            <TextView
                style="@style/Common_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/purchasenetamount"
                android:layout_weight="0.2"
                android:text="Net \nAmount"
                android:textSize="@dimen/_16dp"
                android:fontFamily="@font/poppins_semibold"
                android:textAlignment="textStart"
                android:textColor="@color/whitepure" />

            <TextView
                style="@style/Common_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/purchaseduedate"
                android:layout_weight="0.2"
                android:text="Due Date"
                android:textSize="@dimen/margin_12"
                android:fontFamily="@font/poppins_semibold"
                android:textAlignment="textStart"
                android:textColor="@color/whitepure" />
            <TextView
                android:id="@+id/purchaseStatus"
                style="@style/Common_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/margin_12"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_weight="0.12"
                android:text="Status"
                android:textAlignment="textStart"
                android:textColor="@color/whitepure" />

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_sub_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whitepure"
            android:layout_marginBottom="@dimen/margin_20" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/noData"
            android:visibility="gone"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_semibold"
            android:text="No Records Found"
            android:layout_marginTop="@dimen/text_size_20"
            android:textSize="@dimen/text_size_20"
            android:textColor="@color/colorAccent"
            android:layout_centerInParent="true"
            />
    </LinearLayout>
