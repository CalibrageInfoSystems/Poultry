<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:scrollbars="none"


    >


    <LinearLayout
        android:fillViewport="true"
        android:isScrollContainer="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"


        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3dp"

                android:weightSum="1">

                <androidx.cardview.widget.CardView
                    android:id="@+id/payment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/paymenttitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_marginRight="@dimen/margin_10"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <LinearLayout
                            android:id="@+id/payment_title"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_margin="@dimen/margin_5"
                            android:layout_weight="0.5"
                            android:orientation="horizontal"

                            android:weightSum="1">


                            <LinearLayout
                                android:id="@+id/linear61"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:orientation="vertical"

                                android:weightSum="1">


                                <TextView
                                    android:id="@+id/billingamount"
                                    style="@style/Common_textView"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.5"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text=""
                                    android:textAlignment="textStart"
                                    android:textColor="@color/blue"
                                    android:textSize="@dimen/_14dp" />

                                <TextView
                                    style="@style/Common_textView"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.5"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text="Billing Amt."
                                    android:textAlignment="textStart"
                                    android:singleLine="true"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_16dp" />
                            </LinearLayout>



                            <LinearLayout
                                android:id="@+id/linear63"

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:orientation="vertical"

                                android:weightSum="1">

                                <TextView
                                    android:id="@+id/noofcartons"
                                    style="@style/Common_textView"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.5"
                                    android:layout_marginRight="10dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text=""
                                    android:textAlignment="textEnd"
                                    android:textColor="@color/blue"
                                    android:textSize="@dimen/_14dp" />

                                <TextView
                                    style="@style/Common_textView"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="0.5"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text="Number of Cartons"
                                    android:textAlignment="textEnd"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_16dp" />


                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/payment_title1"
                            android:layout_width="match_parent"

                            android:layout_height="0dp"
                            android:layout_margin="@dimen/margin_5"
                            android:layout_weight="0.5"
                            android:orientation="horizontal"

                            android:weightSum="1">


                            <LinearLayout
                                android:id="@+id/linear1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:orientation="vertical"

                                android:weightSum="1">


                                <TextView
                                    android:id="@+id/receivedamount"
                                    style="@style/Common_textView"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.5"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text=""
                                    android:textAlignment="textStart"
                                    android:textColor="@color/blue"
                                    android:textSize="@dimen/_14dp" />

                                <TextView
                                    style="@style/Common_textView"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="0.5"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text="Received Amt"
                                    android:textAlignment="textStart"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_16dp" />
                            </LinearLayout>



                            <LinearLayout
                                android:id="@+id/linear6"

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:orientation="vertical"

                                android:weightSum="1">

                                <TextView
                                    android:id="@+id/dueamount"
                                    style="@style/Common_textView"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.5"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text=""
                                    android:layout_marginRight="10dp"
                                    android:textAlignment="textEnd"
                                    android:textColor="@color/blue"
                                    android:textSize="@dimen/_14dp" />

                                <TextView
                                    style="@style/Common_textView"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="0.5"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text="Due Amt"
                                    android:textAlignment="textEnd"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_16dp" />


                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>




            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:background="@color/whitepure"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/_3dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="1"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@color/blue"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <TextView
                            style="@style/Common_textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/saledate"
                            android:layout_weight="0.25"
                            android:layout_marginLeft="30dp"
                            android:text="Date"
                            android:textSize="@dimen/margin_12"
                            android:fontFamily="@font/poppins_semibold"
                            android:textAlignment="textStart"
                            android:textColor="@color/whitepure" />
                        <TextView
                            android:id="@+id/salecartons"
                            style="@style/Common_textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/margin_12"
                            android:fontFamily="@font/poppins_semibold"
                            android:layout_weight="0.25"
                            android:text="No. of \nCartons"
                            android:textAlignment="textStart"
                            android:textColor="@color/whitepure" />
                        <TextView
                            style="@style/Common_textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/salebillrate"
                            android:layout_weight="0.25"
                            android:text="Bill Rate"
                            android:textSize="@dimen/_16dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:textAlignment="textStart"
                            android:textColor="@color/whitepure" />

                        <TextView
                            android:id="@+id/salebillamount"
                            style="@style/Common_textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Bill Amount"
                            android:textAlignment="textStart"
                            android:textColor="@color/whitepure"
                            android:textSize="@dimen/_16dp" />
                    </LinearLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/salerecyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/noData2"
                        android:visibility="gone"
                        android:textAlignment="center"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="No Records Found"
                        android:layout_marginTop="@dimen/text_size_20"
                        android:textSize="@dimen/text_size_20"
                        android:textColor="@color/colorAccent"
                        android:layout_centerInParent="true"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="vertical"
                android:background="@color/backgount_clr">

                <TextView
                    style="@style/Common_textView_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="16dp"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="Transaction Details"
                    android:textColor="@color/blue"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:weightSum="1"
                android:layout_marginBottom="@dimen/margin_20"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="0dp"

                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/margin_50"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/blue"
                        android:gravity="center"

                        android:weightSum="1">

                        <TextView
                            android:id="@+id/transdate"
                            style="@style/Common_textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="0.33"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Date"
                            android:textAlignment="textStart"
                            android:textColor="@color/whitepure"
                            android:textSize="@dimen/margin_12" />
                        <TextView
                            android:id="@+id/transmodepayment"
                            style="@style/Common_textView"
                            android:layout_width="0dp"
                            android:layout_marginLeft="20dp"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/margin_12"
                            android:fontFamily="@font/poppins_semibold"
                            android:layout_weight="0.33"
                            android:text="Mode of \nPayment"
                            android:textAlignment="textStart"
                            android:textColor="@color/whitepure" />
                        <TextView
                            style="@style/Common_textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/transreceivedamount"
                            android:layout_weight="0.33"
                            android:layout_marginLeft="20dp"
                            android:text="Received \nAmount"
                            android:textSize="@dimen/_16dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:textAlignment="textStart"
                            android:textColor="@color/whitepure" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/transactionrecyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/noData"
                        android:visibility="gone"
                        android:textAlignment="center"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="No Records Found"
                        android:layout_marginTop="@dimen/text_size_20"
                        android:textSize="@dimen/text_size_20"
                        android:textColor="@color/colorAccent"
                        android:layout_centerInParent="true"
                        />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</ScrollView>